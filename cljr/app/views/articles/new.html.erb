<%if flash[:error]%>
<%=flash[:error]%>
<%end%>

<%= form_tag("/categories/#{params[:category_id]}/articles", method: "create") do %>
<%= label_tag(:name, "Name:")%>
<%= text_field_tag(:name) %>
<%= label_tag(:description, "Description:")%>
<%= text_field_tag(:description) %>
<%= label_tag(:price, "Price:")%>
<%= text_field_tag(:price) %>
<%=submit_tag("Post Article")%>
<%end%>